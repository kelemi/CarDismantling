                android:orientation="vertical">

    <include layout="@layout/common_title_bar" />

    <LinearLayout
        android:id="@+id/layout_submit"
        style="@style/WidthFullStyle"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:padding="@dimen/padding5">

        <TextView
            android:id="@+id/tv_submit"
            style="@style/WidthFullStyle"
            android:background="@drawable/shape_rect_corner_green_bg"
            android:gravity="center"
            android:padding="@dimen/padding10"
            android:text="提交"
            android:textColor="@color/white" />
    </LinearLayout>

    <ScrollView
        style="@style/FullStyle"
        android:layout_above="@+id/layout_submit"
        android:layout_below="@+id/titlebar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grayqing"
            android:orientation="vertical">


            <LinearLayout
                style="@style/WidthFullStyle"
                android:background="@color/color_main"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/padding10">

                <ImageView
                    android:id="@+id/iv_car_brand_pic"
                    style="@style/NormalStyle"
                    android:src="@drawable/ico_default_car_white" />

                <TextView
                    android:id="@+id/tv_car_num"
                    style="@style/WidthFullStyle"
                    android:layout_marginTop="@dimen/margin10"
                    android:gravity="center"
                    android:text="汽车车牌号"
                    android:textColor="@color/white"
                    android:textSize="@dimen/word20" />
            </LinearLayout>
