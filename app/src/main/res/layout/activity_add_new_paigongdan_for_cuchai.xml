            <LinearLayout
                style="@style/WidthFullStyle"
                android:layout_marginTop="@dimen/margin10"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="@dimen/padding10">

                <TextView
                    android:id="@+id/tv_tag_to_input_request"
                    style="@style/WidthFullStyle"
                    android:text="拆解要求:"
                    android:textColor="@color/color_main" />

                <EditText
                    android:id="@+id/et_chaijie_request"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="@dimen/margin10"
                    android:gravity="left|top"
                    android:background="@drawable/shape_rect_white_bg_black_line"
                    android:padding="@dimen/padding10" />
            </LinearLayout>

            <LinearLayout
                style="@style/WidthFullStyle"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/margin10"
                >

                <RelativeLayout
                    style="@style/WidthFullStyle"
                    android:background="@color/white"
                    android:padding="@dimen/padding10">

                    <TextView
                        android:id="@+id/tv_tag_to_choose_worker"
                        style="@style/NormalStyle"
                        android:layout_centerVertical="true"
                        android:text="选择拆解人员:"
                        android:textColor="@color/color_main" />

                    <TextView
                        android:id="@+id/tv_choose_chaijie_worker"
                        style="@style/NormalStyle"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/shape_rect_corner_green_bg"
                        android:gravity="center"
                        android:paddingBottom="@dimen/padding5"
                        android:paddingLeft="@dimen/padding20"
                        android:paddingRight="@dimen/padding20"
                        android:paddingTop="@dimen/padding5"
                        android:text="选择"
                        android:textColor="@color/white"
                        android:textSize="@dimen/word14" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/tv_choosed_chaijie_worker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin10"
                    android:layout_marginRight="@dimen/margin10"
                    android:background="@drawable/shape_rect_white_bg_black_line"
                    android:padding="@dimen/padding10" />
            </LinearLayout>
