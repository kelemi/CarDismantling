<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grayqing">
    <RelativeLayout
        android:id="@+id/titlebar"
        android:layout_width="match_parent"
        android:background="@color/color_main"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/iv_left_back"
            style="@style/NormalStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ico_back_white"
            android:padding="@dimen/padding10"
            android:drawablePadding="@dimen/padding5"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_title"
            style="@style/NormalStyle"
            android:layout_centerInParent="true"
            android:padding="@dimen/padding10"
            android:text="title"
            android:textSize="@dimen/word20"
            android:textColor="@color/white"
            android:visibility="visible"/>
        <!--最右边的iv-->
        <ImageView
            android:id="@+id/iv_take_photo"
            style="@style/NormalStyle"
            android:src="@drawable/ico_camera_white_small"
            android:layout_toLeftOf="@+id/iv_ewm_sacn"
            android:layout_marginRight="@dimen/margin10"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding5"
            android:visibility="visible"/>
        <!-- 最右边的iv-->
        <ImageView
            android:id="@+id/iv_ewm_sacn"
            style="@style/NormalStyle"
            android:src="@drawable/ico_scan_erweima"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/padding5"
            android:visibility="visible"/>

    </RelativeLayout>
    <!--<com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/sc_refresh"
        style="@style/FullStyle"
        android:layout_below="@+id/titlebar"
        >-->
        <RelativeLayout
            style="@style/FullStyle"
            android:layout_below="@+id/titlebar"
            android:orientation="vertical">
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_banner"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/iv_banner_default"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:visibility="visible"
                android:src="@drawable/ico_default_banner"
                android:scaleType="centerCrop"
                />
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_funcion"
                android:layout_below="@+id/iv_banner_default"
                style="@style/WidthFullStyle"
                android:background="@color/white"
                />
            <LinearLayout
                android:id="@+id/layout_bottom_tag"
                style="@style/WidthFullStyle"
                android:layout_alignParentBottom="true"
                >
                <TextView
                    style="@style/WidthWeightStyle"
                    android:text="保证品质"
                    android:gravity="center"
                    android:textColor="@color/color_main"
                    android:drawablePadding="@dimen/padding5"
                    android:drawableTop="@drawable/ico_tag_bao"/>
                <TextView
                    style="@style/WidthWeightStyle"
                    android:text="用心服务"
                    android:gravity="center"
                    android:textColor="@color/color_main"
                    android:drawablePadding="@dimen/padding5"
                    android:drawableTop="@drawable/ico_tag_cheng"/>
                <TextView
                    style="@style/WidthWeightStyle"
                    android:text="方便快捷"
                    android:gravity="center"
                    android:textColor="@color/color_main"
                    android:drawablePadding="@dimen/padding5"
                    android:drawableTop="@drawable/ico_tag_jie"/>

            </LinearLayout>
            <RelativeLayout
                style="@style/WidthFullStyle"
                android:layout_below="@+id/rv_funcion"
                android:layout_above="@+id/layout_bottom_tag"
                android:layout_margin="@dimen/margin5"
                android:gravity="center"
                >
                <View
                    style="@style/LineWidthFullStyle"
                    android:layout_centerVertical="true"
                    android:background="@color/color_main"/>
                <TextView
                    android:id="@+id/tv_tag_chengnuo"
                    style="@style/NormalStyle"
                    android:text="我们承诺"
                    android:layout_centerInParent="true"
                    android:background="@color/grayqing"
                    android:textColor="@color/color_main"
                    android:padding="@dimen/padding10"/>

             </RelativeLayout>

            <!--<LinearLayout
                style="@style/WidthFullStyle"
                android:orientation="vertical"
                >
                <RelativeLayout
                    style="@style/WidthFullStyle"

                    >
                    <TextView
                        android:id="@+id/tv_tag_todo_list"
                        style="@style/NormalStyle"
                        android:padding="@dimen/padding10"

                        android:text="待办事项"/>
                    <TextView
                        android:id="@+id/tv_to_more_todo_job"
                        style="@style/NormalStyle"
                        android:padding="@dimen/padding10"
                        android:layout_alignParentRight="true"
                        android:text="更多"/>
                </RelativeLayout>

                <com.aofan.cardismantling.widget.ListViewForScrollView
                    android:id="@+id/lv_job_wait_todo"
                    style="@style/WidthFullStyle"
                    android:divider="@color/grayqing"
                    android:dividerHeight="1dp"/>
            </LinearLayout>-->

        </RelativeLayout>

    <!--</com.handmark.pulltorefresh.library.PullToRefreshScrollView>-->


</RelativeLayout>