<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
    android:padding="@dimen/padding10">
    <TextView
        android:id="@+id/tv_lingjian_name"
        style="@style/NormalStyle"
        android:text="零件名称"
        android:textSize="@dimen/word16"
        />
    <TextView
        android:id="@+id/tv_lingjian_sourse_car"
        style="@style/NormalStyle"
        android:layout_alignParentRight="true"
        android:text="来源汽车车牌号:xxxx"
        android:textSize="@dimen/word16"
        />

    <TextView
        android:id="@+id/tv_lingjian_chaijie_person"
        style="@style/NormalStyle"
        android:layout_below="@+id/tv_lingjian_name"
        android:layout_marginTop="@dimen/margin5"
        android:text="拆解人:xxx"
        android:textSize="@dimen/word16"
        />

    <TextView
        android:id="@+id/tv_lingjian_chaijie_time"
        style="@style/WidthFullStyle"
        android:gravity="right"
        android:layout_below="@+id/tv_lingjian_name"
        android:layout_marginTop="@dimen/margin5"
        android:layout_toRightOf="@+id/tv_lingjian_chaijie_person"
        android:text="拆解时间:xxx"
        android:textSize="@dimen/word16"
        />

</RelativeLayout>