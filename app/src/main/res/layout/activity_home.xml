<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RadioGroup
        android:id="@+id/rg_choose_tab"
        style="@style/WidthFullStyle"
        android:layout_alignParentBottom="true"
        android:background="@color/grayqing3"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="@dimen/padding5">

        <RadioButton
            android:id="@+id/rb_index_page"
            style="@style/HomeTabButtonStyle"
            android:background="@color/transparent"
            android:checked="true"
            android:drawableTop="@drawable/selector_home_bottom_tab_index"
            android:text="@string/str_indexpage" />

        <RadioButton
            android:id="@+id/rb_personal_center"
            style="@style/HomeTabButtonStyle"
            android:background="@color/transparent"
            android:drawableTop="@drawable/selector_home_bottom_tab_personal_center"
            android:text="@string/str_setting" />

    </RadioGroup>
    <com.aofan.cardismantling.widget.NoSlideViewPager
        android:id="@+id/vp"
        style="@style/FullStyle"
        android:layout_above="@+id/rg_choose_tab"
        />


</RelativeLayout>