<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/padding10">
    <ImageView
        android:id="@+id/iv_link"
        style="@style/NormalStyle"
        android:src="@drawable/ico_back_right_black"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_job_state"
        style="@style/NormalStyle"
        android:layout_toLeftOf="@+id/iv_link"
        android:layout_marginRight="@dimen/margin10"
        android:textSize="@dimen/word16"
        android:textColor="@color/red"
        android:text="任务状态"
        android:visibility="visible"/>
    <TextView
        android:id="@+id/tv_car_num"
        style="@style/NormalStyle"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tv_job_state"
        android:layout_marginRight="@dimen/margin10"
        android:textSize="@dimen/word16"
        android:textColor="@color/color_main"
        android:text="车辆编号"/>
    <TextView
        android:id="@+id/tv_ensure_chaijie_time"
        style="@style/NormalStyle"
        android:layout_toLeftOf="@+id/iv_link"
        android:layout_marginRight="@dimen/margin10"
        android:layout_below="@+id/tv_car_num"
        android:layout_marginTop="@dimen/margin10"
        android:textSize="@dimen/word12"
        android:textColor="@color/gray"
        android:text="确认拆解:xxxxxxx"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/tv_finish_chaijie_time"
        style="@style/WidthFullStyle"
        android:gravity="left"
        android:layout_toLeftOf="@+id/tv_ensure_chaijie_time"
        android:layout_marginRight="@dimen/margin10"
        android:layout_below="@+id/tv_car_num"
        android:layout_marginTop="@dimen/margin10"
        android:textSize="@dimen/word12"
        android:textColor="@color/gray"
        android:text="完成拆解:xxxxxxx"
        android:visibility="gone"/>
   <!-- <TextView
        android:id="@+id/tv_car_num"
        style="@style/NormalStyle"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/tv_job_state"
        android:layout_marginRight="@dimen/margin10"
        android:textSize="@dimen/word16"
        android:textColor="@color/color_main"
        android:text="车辆编号"/>-->

    <TextView
        android:id="@+id/tv_chaijie_type"
        style="@style/WidthFullStyle"
        android:layout_below="@+id/tv_car_num"
        android:layout_marginTop="@dimen/margin10"
        android:textSize="@dimen/word14"
        android:textColor="@color/red2"
        android:text="拆解方式"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/tv_lingjian_to_chaijie"
        style="@style/WidthFullStyle"
        android:layout_below="@+id/tv_chaijie_type"
        android:layout_toLeftOf="@+id/iv_link"
        android:layout_marginRight="@dimen/margin10"
        android:layout_marginTop="@dimen/margin10"
        android:textSize="@dimen/word14"
        android:textColor="@color/gray"
        android:text="拆解零件:xxxxxxxx"
        android:singleLine="true"
        android:ellipsize="end"/>

</RelativeLayout>